@page "/Account/Login"
@using SimpleDataManagementSystem.Frontend.Web.Razor.Pages.ViewComponents

@using Microsoft.Extensions.Localization
@inject IStringLocalizer<LoginModel> loc

@model SimpleDataManagementSystem.Frontend.Web.Razor.Pages.Account.LoginModel

@{
    ViewData["Title"] = loc["Login"];
}

<div class="header">
    <h1>@loc["Login"]</h1>
</div>

<br>

<div class="content-container">

    <!-- #region DisplayError -->
    @await Component.InvokeAsync(typeof(DisplayErrorViewComponent), Model?.Error)
    <!-- #endregion DisplayError -->

    <!-- #region ModelStateValidationErrors -->
    @await Component.InvokeAsync(typeof(InvalidModelStateViewComponent), ModelState)
    <!-- #endregion ModelStateValidationErrors -->

    <br>

    <form method="post">
        <div class="form-controls-container">
            <div class="form-controls">
                <div class="input-control single-per-line">
                    <div class="required">
                        <label>@loc["Username"]:</label>
                    </div>
                    <div>
                        <input type="text" name="username" />
                    </div>
                </div>

                <div class="input-control single-per-line">
                    <div class="required">
                        <label>@loc["Password"]:</label>
                    </div>
                    <div>
                        <input type="password" name="password" />
                    </div>
                </div>

                <div class="input-control single-per-line">
                    <div>
                        <button class="button-default" type="submit">@loc["Login"]</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
