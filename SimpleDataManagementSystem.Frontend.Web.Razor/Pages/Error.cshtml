@page "/Error"
@* @page "/Error/PageError/{0}" *@

@model ErrorModel

@using Microsoft.Extensions.Localization
@inject IStringLocalizer<ErrorModel> loc

@{
    ViewData["Title"] = loc["Error"];
}

<div class="header">
    <h1>@loc["Error"]</h1>
</div>

<br />

@if (Model?.Error != null)
{
    <div style="
        padding:20px;
        font-size:20px; 
        display:flex; 
        flex-flow: wrap; 
        text-align:center; 
        justify-content:center; 
        color: white; 
        background-color: indianred;"
    >
        <div style="text-decoration:underline;">
            <h1>
                @(loc[Model.Error?.Message] ?? loc["Something went wrong while processing your request. Please try again."])
            </h1>
        </div>

        @if (Model.Error?.Errors != null)
        {
            <div style="flex-basis: 100%;">
                @foreach (var e in Model.Error.Errors)
                {
                    <div>
                        <span>&#8226;</span>
                        <label>@loc[e]</label>
                    </div>
                }
            </div>
        }
    </div>
}
